###################
# EXCITING HOTKEY #
###################

# See theming mode for other kinda interesting hotkey stuff

bindsym $mod+b exec 'kitty ranger'

bindsym $mod+Shift+d exec 'source ~/.bashrc && rofi -show drun'
bindsym $mod+Shift+p exec 'source ~/.bashrc && tessen -d rofi'

bindcode 76 exec 'increment-volume down'
bindcode 95 exec 'increment-volume mute'
bindcode 96 exec 'increment-volume up'

bindcode $mod+76 exec 'increment-volume down 1'
bindcode $mod+96 exec 'increment-volume up 1'

bindcode $mod+Shift+76 exec playerctl previous
bindcode $mod+Shift+95 exec playerctl play-pause 
bindcode $mod+Shift+96 exec playerctl next

bindsym $mod+n exec 'dunstctl close'
bindsym $mod+m exec 'dunstctl history-pop'
bindsym $mod+Shift+n exec 'dunstctl close-all'

bindsym $mod+c exec 'grimshot copy area'
bindsym $mod+Shift+c exec "/bin/bash -c 'grimshot save area ~/photos/screenshots/$(date -u +"%Y-%m-%dT%H:%M:%SZ").png'"

#################
# BORING HOTKEY #
#################

bindsym $mod+Shift+q kill

bindsym $mod+Shift+r reload
bindsym $mod+Return exec $terminal
bindsym $mod+x exec 'kitty cbonsai -S'
bindsym $mod+Shift+x exec swaylock
bindsym $mod+Shift+e exec swaynag -t warning -m 'Ayo bruh, you tryna dip?' -B 'Yah' 'swaymsg exit'

bindsym $mod+v splitv
bindsym $mod+Shift+v splith

bindsym $mod+w layout tabbed
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child
bindsym $mod+f fullscreen
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+$up focus up
bindsym $mod+$down focus down 
bindsym $mod+$left focus left
bindsym $mod+$right focus right 

bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

mode "resize" {
    bindsym $up resize grow height 25px
    bindsym $down resize shrink height 25px

    bindsym $right resize shrink width 25px
    bindsym $left resize grow width 25px

    bindsym Escape mode "default"; exec "dunstify --appname Sway --replace 100002 --timeout 1000 'Normal mode'"
}

mode "theme" {
    bindsym $mod+Shift+p exec 'dmgr -p r'
    bindsym $mod+p exec 'kitty dmgr -p i' 
    bindsym $mod+Shift+b exec 'dmgr -b r'
    bindsym $mod+b exec 'kitty dmgr -b i' 
    bindsym $mod+Shift+f exec 'dmgr -f r'
    bindsym $mod+f exec 'kitty dmgr -f i' 

    bindsym Escape mode "default"; exec "dunstify --appname Sway --replace 100002 --timeout 1000 'Normal mode'"
}

bindsym $mod+r mode "resize"; exec "dunstify --appname Sway --replace 100002 --timeout 1000 'Resize mode'"
bindsym $mod+t mode "theme"; exec "dunstify --appname Sway --replace 100002 --timeout 1000 'Theming mode'"

