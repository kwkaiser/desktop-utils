########
# INIT #
########

exec gammastep 
exec blueman-applet

########
# BASE #
########

set $mod Mod4
set $terminal kitty ~

set $left h
set $down j
set $up k
set $right l

font xft:Hack, Regular 11
floating_modifier $mod normal

gaps inner 10
gaps outer 0

##########
# COLORS #
##########

# class                 border  backg    text        indic     child
client.focused          $color2 $color2  $foreground $color3   $color2
client.focused_inactive $color4 $color4  $foreground $color4   $color4
client.unfocused        $color4 $color4  $foreground $color4   $color4
client.urgent           $color1 $color1  $foreground $color1   $color1
client.placeholder      #000000 #0c0c0c     #ffffff     #000000   #0c0c0c

###################
# BORDERS/HEADERS #
###################

default_border pixel 2 
titlebar_border_thickness 1

###################
# EXCITING HOTKEY #
###################

bindsym $mod+Shift+d exec rofi -show run
bindsym $mod+Shift+p exec tessen -b rofi

bindcode 76 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindcode 95 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindcode 96 exec pactl set-sink-volume @DEFAULT_SINK@ +5%

bindcode $mod+76 exec playerctl previous
bindcode $mod+95 exec playerctl play-pause 
bindcode $mod+96 exec playerctl next

#################
# BORING HOTKEY #
#################

bindsym $mod+Shift+q kill

bindsym $mod+Shift+r reload
bindsym $mod+Return exec $terminal
bindsym $mod+Shift+x exec swaylock
bindsym $mod+Shift+e exec swaynag -t warning -m 'Ayo bruh, you tryna dip?' -B 'Yah' 'swaymsg exit'

bindsym $mod+v splitv
bindsym $mod+Shift+v splith

bindsym $mod+w layout tabbed
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child
bindsym $mod+f fullscreen
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+$up focus up
bindsym $mod+$down focus down 
bindsym $mod+$left focus left
bindsym $mod+$right focus right 

bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

mode "resize" {
    bindsym $up resize grow height 25px
    bindsym $down resize shrink height 25px

    bindsym $right resize shrink width 25px
    bindsym $left resize grow width 25px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#######
# BAR #
#######

bar {
    swaybar_command waybar 
}

########################
# WORKSPACE ASSIGNMENT #
########################

workspace 1 output DP-1 
workspace 2 output DP-1 
workspace 3 output DP-1 
workspace 3 output DP-1 
workspace 4 output DP-1 
workspace 5 output DP-1 
workspace 6 output DP-2 
workspace 7 output DP-2 
workspace 8 output DP-2 
workspace 9 output DP-2 
workspace 10 output DP-2 

###########
# OUTPUTS #
###########

output DP-1 pos 0 0 res 1920x1080@143Hz
output DP-2 pos 1920 0 res 1920x1080@143Hz
output DP-1 bg $backgroundimage fill
output DP-2 bg $backgroundimage fill
output DP-1 adaptive_sync on
output DP-2 adaptive_sync on