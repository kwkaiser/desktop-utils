# COLORS #
##########

# class                 border  backg text       indic    child
client.focused          color9  bg    foreground color13  color11
client.focused_inactive color1  bg    foreground color5   color3
client.unfocused        color2  bg    foreground color5   color3
client.urgent           color6  bg    foreground color5   color3
client.placeholder      #000000 #0c0c0c     #ffffff     #000000   #0c0c0c

client.background       bg

#######
# BAR #
#######

bar {
    position top

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

